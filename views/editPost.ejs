<%- include("partials/header.ejs") %>
<div class="container">

<h1>Edit or Delete Posts</h1>
<% if (locals.formdata && formdata.length > 0) { %>
    <% formdata.forEach((post, index) => { %>
        <div>
            <h3>Post #<%= index + 1 %>: <%= post.title %></h3>
            <p><%= post.content %></p>

            <!-- Update Form -->
            <form action="/updatePost" method="post">
                <input type="hidden" name="index" value="<%= index %>">

                <label>New Title:</label><br>
                <input type="text" name="title" value="<%= post.title %>"><br><br>

                <label>New Content:</label><br>
                <textarea name="content" rows="4" cols="50"><%= post.content %></textarea><br><br>

                <label>Password:</label><br>
                <input type="password" name="password" required><br><br>

                <button type="submit">Update</button>
            </form>

            <!-- Delete Form -->
            <form action="/deletePost" method="post" style="margin-top:10px;">
                <input type="hidden" name="index" value="<%= index %>">

                <label>Password to Delete:</label><br>
                <input type="password" name="password" required><br><br>

                <button type="submit">Delete</button>
            </form>

            <hr>
        </div>
    <% }) %>
<% } else { %>
    <p>No posts available to edit or delete.</p>
<% } %>
<div class="container">

<%- include("partials/footer.ejs") %>
